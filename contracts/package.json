{
    "name": "starboard/contracts",
    "version": "1.0.0",
    "main": "node.js",
    "license": "Apache-2.0",
    "engines": {
        "node": ">=22.0.0"
    },
    "scripts": {
        "clean": "forc clean",
        "build:vault-expose-1": "ts-node -e 'require(\"fs\").cpSync(\"contracts/core/vault/src/\", \"contracts/vault-expose/src/\", {recursive: true});'",
        "build:vault-expose-2": "ts-node -e 'const concat = require(\"concat\"); concat([\"contracts/vault-expose/src/main.sw\", \"contracts/vault-expose/vault-expose.txt\"], \"contracts/vault-expose/src/main.sw\")'",
        "build:contracts": "forc build --release --log-level 4",
        "build:pre": "pnpm build:vault-expose-1 && pnpm pnpm build:vault-expose-2",
        "build": "pnpm build:pre && pnpm build:contracts",
        "gen:types": "fuels typegen -i ./contracts/**/*-abi.json -o ./types",
        "test": "vitest run",
        "test:watch": "vitest",
        "lint:contracts": "forc fmt --check",
        "lint:ts": "eslint --ext .ts,.tsx test/ tasks/",
        "lint": "forc fmt --check && eslint --ext .ts,.tsx test/ tasks/",
        "fix-lint": "eslint --fix --ext .ts,.tsx test/ tasks/",
        "run:node": "ts-node tasks/run-node.ts",
        "deploy:testnet:token": "ts-node tasks/deploy-testnet-token.ts",
        "deploy:starboard": "ts-node tasks/deploy-starboard.ts",
        "deploy:stork-mock": "ts-node tasks/deploy-stork-mock.ts",
        "setup:testnet": "ts-node tasks/setup-testnet.ts",
        "prices:feed": "ts-node tasks/prices-feed.ts",
        "faucet": "ts-node tasks/faucet.ts"
    },
    "devDependencies": {
        "@types/node": "20.3.1",
        "dotenv": "^8.2.0",
        "husky": "8.0.3",
        "prettier": "3.1.0",
        "ts-node": "^10.9.2",
        "typescript": "~5.9.3",
        "vitest": "^3.0.9"
    },
    "dependencies": {
        "bn.js": "^5.2.0",
        "concat": "^1.0.3",
        "fuels": "0.101.3"
    }
}
